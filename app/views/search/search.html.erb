<table class="search-table">
	<tr>
		<th></th>
		<!-- ソート機能 -->
		<th><%= sort_link(@search, :user_name, "名前") %></th>
		<th><%= sort_link(@search, :user_pet_name, "ペットの名前") %></th>
		<th><%= sort_link(@search, :user_intoroduction, "自己紹介") %></th>
		<th><%= sort_link(@search, :body, "記録") %></th>
		<th></th>
		<th></th>
	</tr>
	<!-- 検索結果 -->
	<% @words.each do |word| %>
		<% if(word.user.user_status == "公開")&&(word.record_public == true)%>
			<tr>
				<td><%= attachment_image_tag word.user, :profile_image, size: "30x30" %></td>
				<td>
					<%= link_to(user_path(word.user)) do %>
						<%= word.user.name %>
					<% end %>
				</td>
				<td><%= word.user.pet_name %></td>
				<td><%= word.user.intoroduction %></td>
				<td>
					<%=  link_to(pet_record_path(word)) do %>
						<%= truncate(word.body.gsub(/[#＃][\w\p{Han}ぁ-ヶｦ-ﾟー]+/, ""), length: 30) %>
					<% end %>
				</td>
				<td>
					<!-- タグ機能 -->
					<%= render "pet_records/tag", record: word %>
				</td>

				 <!-- フォロー機能 -->
	            <td>
	                <%= render 'users/follow', user: word.user %>
	            </td>

			</tr>
		<% end %> <!-- if 公開 -->
	<% end %> <!-- words.each -->
</table>


