<% if current_user.id != user.id %>
	<% if user.followed_by?(current_user) %>
        <p class="follow">
        	<%=link_to "フォロー済み", user_user_relationships_path(user.id), method: :delete, class: "btn btn-default active" %></p>
    <% else %>
        <p class="follow">
        	<%=link_to "フォローする", user_user_relationships_path(user.id), method: :post, class: "btn btn-default" %></p>
    <% end %>
<% end %>