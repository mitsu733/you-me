<%= form_with(model: pet_record, local: true) do |f| %>

  <% if pet_record.errors.any? %>
  <p>入力した内容にエラーが<%= pet_record.errors.count %>件あります</p>
    <div class="alert alert-danger">
      <ul>
      <% pet_record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="status-radio-button">
		<table>
			<tr>
			  	<th>トイレ</th>
				<td>
				<%= f.radio_button :toilet, "×", id: "radio-1-1" %>
				<%= f.label "×", for: "radio-1-1" %>
				</td>
				<td>
				<%= f.radio_button :toilet, "△", id: "radio-1-2" %>
				<%= f.label "△", for: "radio-1-2" %>
				</td>
				<td>

				<%= f.radio_button :toilet, "◯", id: "radio-1-3" %>
				<%= f.label"◯", for: "radio-1-3" %>
				</td>
			</tr>
			<tr>
				<th>おみず</th>
				<td>
				<%= f.radio_button :water, "×", id: "radio-2-1" %>
				<%= f.label"×", for: "radio-2-1" %>
				</td>
				<td>
				<%= f.radio_button :water, "△", id: "radio-2-2" %>
				<%= f.label"△", for: "radio-2-2" %>
				</td>
				<td>
				<%= f.radio_button :water, "◯", id: "radio-2-3" %>
				<%= f.label"◯", for: "radio-2-3" %>
				</td>
			</tr>
			<tr>
		  		<th>ごはん</th>
			 	<td>
			 	<%= f.radio_button :food, "×", id: "radio-3-1" %>
			 	<%= f.label"×", for: "radio-3-1" %>
			 	</td>
			 	<td>
			 	<%= f.radio_button :food, "△", id: "radio-3-2" %>
			 	<%= f.label"△", for: "radio-3-2" %>
			 	</td>
			 	<td>
			 	<%= f.radio_button :food, "◯", id: "radio-3-3" %>
			 	<%= f.label"◯", for: "radio-3-3" %>
			 	</td>
			</tr>
			<tr>
		  	<th>げんき</th>
				<td><%= f.radio_button :energy, "×", id: "radio-4-1" %>
				<%= f.label"×", for: "radio-4-1" %></td>
				<td><%= f.radio_button :energy, "△", id: "radio-4-2" %>
				<%= f.label"△", for: "radio-4-2" %></td>
				<td><%= f.radio_button :energy, "◯", id: "radio-4-3" %>
			 	<%= f.label"◯", for: "radio-4-3" %></td>
				</td>
			</tr>
		</table>

		<div class="record">
			  <%= f.attachment_field :record_image, class: "img" %>
			  <%= f.text_area :body, class: "text-form" %>
		</div>

		<div class="status-radio-button">
		  	<% if current_user.user_status == "非公開" %>
		  	  <%= "非公開"%>
			<% else %>
		  	  <%= f.radio_button :record_public, :true %>
			  <%= f.label(:record_public, :公開) %>
			  <%= f.radio_button :record_public, :false %>
			  <%= f.label(:record_public, :非公開) %>
			<% end %>
		</div>
			 <%= f.submit "記録", class: "btn btn-default record-btn" %>
	</div>
<% end %>