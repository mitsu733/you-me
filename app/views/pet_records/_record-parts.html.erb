<div class="record-box-item">
    <ul>
        <li class="record-image">
            <%= attachment_image_tag record, :record_image, size: "100x100%", class: "img" %>
        </li>
    </ul>
    <ul>
        <li class="date">
            <%= link_to(pet_record_path(record)) do %>
              <%= l(record.created_at.to_date) %>
            <% end %>
        </li>
        <li class="record-body">
            <%= truncate tag_word(record), length: 30 %>
        </li>
    </ul>
    <ul>
        <li class="user-pet-name">
            <%= link_to user_path(record.user.id) do %>
              公開者：
              <%= record.user.name %>
            <% end %>
        </li>
    </ul>
    <ul>
        <li>
            <div class="like-comment">
            <!-- コメント機能 -->
                <span class="comment-count">
                <%= record.record_comments.count %>件コメント
                </span>

            <!-- いいね機能 -->
                <span id="likes_buttons_<%= record.id %>">
                    <%= render 'likes/like', pet_record: record %>
                </span>
            </div>
        </li>
        <!-- タグ機能 -->
        <li class="tag">
            <%= render "pet_records/tag", record: record %>
        </li>
    </ul>
    <ul>
    </ul>
    <ul>
        <li class="pet-status">
            トイレ
            <%= record.toilet %>
            お水
            <%= record.water %>
            ごはん
            <%= record.food %>
            元気
            <%= record.energy %>
        </li>
    </ul>
</div>