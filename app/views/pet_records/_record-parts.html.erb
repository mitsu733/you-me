<div class="record-box-item">
  <ul>
    <li class="record-image">
      <%= attachment_image_tag record, :record_image, size: "100x100%", class: "img" %>
    </li>
  </ul>
  <ul>
    <li class="date">
      <%= link_to(pet_record_path(record)) do %>
        <%= l(record.created_at.to_date) %>
      <% end %>
    </li>
    <li class="user-pet-name">
      <%= link_to user_path(record.user.id) do %>
        <%= record.user.name %> /
        <%= record.user.pet_name %>
      <% end %>
    </li>
  </ul>
  <ul>
    <li class="record-body">
      <%= truncate(record.body.gsub(/[#＃][\w\p{Han}ぁ-ヶｦ-ﾟー]+/, ""), length: 30) %>
    </li>
</ul>
<ul>
    <!-- タグ機能 -->
    <li class="tag">
      <%= render "pet_records/tag", record: record %>
    </li>
  </ul>
  <ul>
    <!-- いいね機能 -->
    <li id="likes_buttons_<%= record.id %>">
      <%= render 'likes/like', pet_record: record %>
    </li>
</ul>
<ul>
    <li class="pet-status">
      トイレ<%= record.toilet %>
      お水<%= record.water %>
      ごはん<%= record.food %>
      元気<%= record.energy %>
    </li>
  </ul>
</div>
